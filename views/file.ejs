<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body>
    <%- include('header') %>

    <h1 class="text-[1.6rem] font-[600] text-center text-green-600">
      PASS Student Details
    </h1>
    <div class="flex flex-row justify-between px-[5rem] mt-[1rem]">
      <% students.forEach((student) => {%>
      <div class="h-[8rem] w-[14rem] rounded-md  p-[10px] bg-blue-200
       text-[1.1rem]">
        <p>Name: <%= student.name %></p>
        <p>Class: <%= student.grade %></p>
        <p>Subject: <%= student.learn %></p>
      </div>
      <% }); %>
    </div>
  </body>
</html>
